{
  "name": "convert-media-api",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "start:watch": "nodemon --watch src/**/* -e ts,json --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/server.ts",
    "start:dev": "docker run --rm -v $(pwd):/app -p 17012:17012 -p 9229:9229 dragonfly161518/ffmpeg-api-dev",
    "start:prod": "node ./dist/server.js",
    "build": "tsc -p .",
    "build:dev": "docker build --target development -t dragonfly161518/ffmpeg-api-dev .",
    "build:prod": "docker build -t dragonfly161518/ffmpeg-api .",
    "go": "npm run build:dev && npm run start:dev && docker ps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "stream-transcoder": "0.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/node": "^14.0.27",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
